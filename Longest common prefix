class Solution:
    def longestCommonPrefix(self, strs):
        if not strs:
            return ""

        # Start with the first word as prefix
        prefix = strs[0]

        # Compare with each string in the list
        for word in strs[1:]:
            while not word.startswith(prefix):
                prefix = prefix[:-1]  # remove last character
                if not prefix:
                    return ""

        return prefix
